    <script>
        // –ü—Ä–æ—Å—Ç—ã–µ —Å—á–µ—Ç—á–∏–∫–∏ –¥–ª—è –∫–∞–∂–¥–æ–≥–æ —Ä–µ—Ü–µ–ø—Ç–∞
        let gingerbreadCount = 0;
        let chocolateCount = 0;

        // –û–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ –¥–ª—è –ø—Ä—è–Ω–∏–∫–æ–≤
        document.querySelectorAll('[data-recipe="gingerbread"]').forEach(ingredient => {
            ingredient.addEventListener('click', function() {
                if (!this.classList.contains('used')) {
                    this.classList.add('used');
                    gingerbreadCount++;
                    
                    // –î–æ–±–∞–≤–ª—è–µ–º —ç–º–æ–¥–∑–∏ –≤ –º–∏—Å–∫—É
                    const bowlContent = document.getElementById('gingerbreadContent');
                    const emojiElement = document.createElement('div');
                    emojiElement.className = 'bowl-emoji';
                    emojiElement.innerHTML = this.querySelector('.ingredient-emoji').innerHTML;
                    bowlContent.appendChild(emojiElement);
                    
                    // –ü—Ä–æ–≤–µ—Ä—è–µ–º, –≤—Å–µ –ª–∏ –∏–Ω–≥—Ä–µ–¥–∏–µ–Ω—Ç—ã –¥–æ–±–∞–≤–ª–µ–Ω—ã
                    if (gingerbreadCount === 6) {
                        document.getElementById('gingerbreadAllAdded').classList.add('active');
                        document.getElementById('gingerbreadNextBtn').disabled = false;
                    }
                }
            });
        });

        // –û–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ –¥–ª—è —à–æ–∫–æ–ª–∞–¥–∞
        document.querySelectorAll('[data-recipe="chocolate"]').forEach(ingredient => {
            ingredient.addEventListener('click', function() {
                if (!this.classList.contains('used')) {
                    this.classList.add('used');
                    chocolateCount++;
                    
                    // –î–æ–±–∞–≤–ª—è–µ–º —ç–º–æ–¥–∑–∏ –≤ –º–∏—Å–∫—É
                    const bowlContent = document.getElementById('chocolateContent');
                    const emojiElement = document.createElement('div');
                    emojiElement.className = 'bowl-emoji';
                    emojiElement.innerHTML = this.querySelector('.ingredient-emoji').innerHTML;
                    bowlContent.appendChild(emojiElement);
                    
                    // –ü—Ä–æ–≤–µ—Ä—è–µ–º, –≤—Å–µ –ª–∏ –∏–Ω–≥—Ä–µ–¥–∏–µ–Ω—Ç—ã –¥–æ–±–∞–≤–ª–µ–Ω—ã
                    if (chocolateCount === 5) {
                        document.getElementById('chocolateAllAdded').classList.add('active');
                        document.getElementById('chocolateNextBtn').disabled = false;
                    }
                }
            });
        });

        // –ö–Ω–æ–ø–∫–∏ "–î–∞–ª—å—à–µ" –¥–ª—è –ø—Ä—è–Ω–∏–∫–æ–≤
        let gingerbreadStep = 0;
        document.getElementById('gingerbreadNextBtn').addEventListener('click', function() {
            gingerbreadStep++;
            
            if (gingerbreadStep === 1) {
                document.getElementById('gingerbreadStep1').classList.add('active');
            } else if (gingerbreadStep === 2) {
                document.getElementById('gingerbreadStep2').classList.add('active');
            } else if (gingerbreadStep === 3) {
                document.getElementById('gingerbreadStep3').classList.add('active');
            } else if (gingerbreadStep === 4) {
                document.getElementById('gingerbreadStep4').classList.add('active');
                document.getElementById('gingerbreadCooking').classList.add('active');
                
                // –ò–º–∏—Ç–∏—Ä—É–µ–º –ø—Ä–æ—Ü–µ—Å—Å –≤—ã–ø–µ—á–∫–∏
                setTimeout(() => {
                    document.getElementById('gingerbreadStep5').classList.add('active');
                    this.textContent = '–ó–∞–≤–µ—Ä—à–∏—Ç—å';
                }, 3000);
            } else if (gingerbreadStep === 5) {
                document.getElementById('gingerbreadResult').classList.add('active');
                this.style.display = 'none';
            }
        });

        // –ö–Ω–æ–ø–∫–∏ "–î–∞–ª—å—à–µ" –¥–ª—è —à–æ–∫–æ–ª–∞–¥–∞
        let chocolateStep = 0;
        document.getElementById('chocolateNextBtn').addEventListener('click', function() {
            chocolateStep++;
            
            if (chocolateStep === 1) {
                document.getElementById('chocolateStep1').classList.add('active');
            } else if (chocolateStep === 2) {
                document.getElementById('chocolateStep2').classList.add('active');
            } else if (chocolateStep === 3) {
                document.getElementById('chocolateStep3').classList.add('active');
                document.getElementById('chocolateCooking').classList.add('active');
                
                // –ò–º–∏—Ç–∏—Ä—É–µ–º –ø—Ä–æ—Ü–µ—Å—Å –Ω–∞–≥—Ä–µ–≤–∞–Ω–∏—è
                setTimeout(() => {
                    document.getElementById('chocolateStep4').classList.add('active');
                }, 2000);
            } else if (chocolateStep === 4) {
                document.getElementById('chocolateStep5').classList.add('active');
                this.textContent = '–ó–∞–≤–µ—Ä—à–∏—Ç—å';
            } else if (chocolateStep === 5) {
                document.getElementById('chocolateResult').classList.add('active');
                this.style.display = 'none';
            }
        });
    </script>
